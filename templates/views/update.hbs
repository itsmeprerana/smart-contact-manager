</head>
<body >
    {{>navbar}}
    {{>sidebar}}
    
   <div class="container">
			<div class="row">
				<div class="col-md-6 offset-md-4">
					<div class="my-card mt-4" >
					<!--- alert -->
													
							<!-- icon registration -->
							<div class="container text-center mb-4">
							<img class="" style="width: 60px;" src="" src="" alt="" />
							 <h1 class="text-center mt-2 ">update CONTACT</h1>
							</div>
						
						<form  action="/update" method="post" >
							<input type="hidden" name="oid" id="oid" value="{{update._id}}">
							<!--name field -->
							<div class="mb-3">
							      <input type="text" name="name" class="form-control "  id="name_field" value="{{update.name}}" aria-describedby="namehelp" placeholder=" Name" required>
								 	
							 </div>
							 <!--email field -->
							 <div class="mb-3">
							    <input type="email" name="email" class="form-control" id="email _ field" aria-describedby="emailHelp" value="{{update.email}}" placeholder="Email" required>
							 </div>
							 <!--password field -->
							 <div class="mb-3">
							    <input type="text" name="phone" value="{{update.phone}}" class="form-control" id="phone" aria-describedby="phoneHelp" placeholder="phone number" required>
							 </div>
							 <!--address field -->
							 <div class="mb-3">
							    <input type="text" name="address" value="{{update.address}}" class="form-control" id="address" aria-describedby="phoneHelp" placeholder="address" required>
							 </div>
							 <!--  submit buttom--> 
							 <div class="container text-center pt-2 ">
							 	<button class="btn btn-success " type="submit" onclick="return confirm('want to update the record')">Submit</button>
							<!-- 	<button class="btn btn-danger text-white" type="reset" >Reset</button> -->
							 </div>				 
							 

						</form>
					</div>
				</div>
			</div>
		</div>
</body>
</html>